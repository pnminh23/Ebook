<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.HomeFragment"
    android:padding="5dp">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:gravity="center|top"
            android:text="Thể Loại"
            android:textSize="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search"
            android:text=""
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:src="@drawable/tinh_cam_lang_man" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_weight="1"

                android:layout_gravity="end"
                android:src="@drawable/hoi_ky_danh_nhan" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:src="@drawable/lich_su_chinh_tri" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_weight="1"

                android:layout_gravity="end"
                android:src="@drawable/van_hoc_nuoc_ngoai" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:src="@drawable/ky_nang_mem" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_weight="1"

                android:layout_gravity="end"
                android:src="@drawable/trinh_tham_kinh_di" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:src="@drawable/nuoi_day_con" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_weight="1"

                android:layout_gravity="end"
                android:src="@drawable/kinh_te_tai_chinh" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:src="@drawable/khoa_hoc_vien_tuong" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_weight="1"

                android:layout_gravity="end"
                android:src="@drawable/tuoi_hoc_tro" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>